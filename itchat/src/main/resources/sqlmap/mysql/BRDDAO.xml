<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 파일명 : BDCTGRDAO.xml 파일설명 : 게시판 변경내용 수정일 수정자 수정내용 ======== ====== ============== 
	2018.09.12 박건우 신규등록 -->

<mapper namespace="com.yokipa.itchat.user.bd.service.dao.BRDDAO">
<sql id="brdColumn">
		PST_NO as pstNo,
		CTGR_NO as ctgrNo,
		MBR_NO as mbrNo,
		MBR_NM as mbrNm,
		PST_TTL as pstTtl,
		PST_CONT as pstCont,
		VIEW_COUNT as viewCount,
		VIEW_GOOD as viewGood,
		PST_RGT_DT as pstRgtDt

	</sql>


	<!-- 게시판 목록 조회 -->
	<select id="boardList" resultType="brdVo">
		select
		<include refid="brdColumn" />
		from
		bdpst
		order by
		pst_No desc, pst_Rgt_Dt desc
		limit #{pageStart}, #{perPageNum};
	</select>

	<!-- 게시판 하나의 목록 조회 -->
	<select id="void" resultType="brdVo">
		select
		*
		from
		bdpst
		where
		pstNo = #{pstNo};
	</select>

	<!-- 게시판 등록 -->
	<select id="insert">
		INSERT INTO `bdpst` (`CTGR_NO`, `MBR_NO`, `PST_TTL`, `PST_CONT`) VALUES
		('1', '1', 'test', 'test');
	</select>

	<!-- 게시판 수정 -->
	<select id="update">
		UPDATE
		mbmgr
		SET
		`MGR_SUBJECT`=#{MGR_SUBJECT}, `MGR_AUTH`=#{MGR_AUTH}, `DL_FL`=#{DL_FL}
		WHERE
		`MGR_NO`=#{MGR_NO};
	</select>

	<!-- 게시판 삭제 -->
	<select id="delete">
		delete from
		mbmgr
		where
		MGR_NO = #{MGR_NO};
	</select>


</mapper>